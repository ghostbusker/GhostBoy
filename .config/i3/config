set $mod Mod4

#transparancy effect
exec compton -f -b

#set wallpaper, then change every -n seconds, maybe add some imagemagick to script to make unique
#holy crap the wallpapers are huge, need to be de-rezzed asap. 
#consider triggering a custom wallpaper for certain workspaces/apps
#idealy set wallpaper to current song album art
exec watch -n 900 feh --randomize --bg-fill ~/Pictures/Wallpapers/*

# switch to workspace with urgent window automatically
for_window [urgent=latest] focus

############# Workspace Setup ##############

### ws1 is for Music ### Also enables the GameBoy Buttons!
exec --no-startup-id i3-msg workspace $ws1
exec xterm -e "bash /home/pi/.config/scripts/buskpod.sh" -title cmus
assign [title="cmus"] $ws1

### ws2 is for Time ###
exec --no-startup-id i3-msg workspace $ws2
exec xterm -e "tty-clock -nsxB" -title tty-clock
assign [title="tty-clock"] $ws2

### ws1 is for System Monitoring ###
exec --no-startup-id i3-msg workspace $ws3
exec xterm -e htop -title htop
assign [title="htop"] $ws3

### ws4 is for Weather ###
exec --no-startup-id i3-msg workspace $ws4
#fetch a new weather image every 15 minutes and rename it weather.png
exec watch -n 900 wget -O /tmp/weather.png https://s.w-x.co/staticmaps/wu/wxtype/county_loc/csg/animate.png
exec xterm -e bash ~/.config/scripts/weather.sh
exec mpv --loop --no-osc --background=0/0/0/0 --framedrop=vo /tmp/weather.png 
assign [class="mpv"] $ws4

### ws5 is for cMatrix ###
exec --no-startup-id i3-msg workspace $ws5
#exec xterm -e "figlet ghstbskr | lolcat"
exec xterm -e "cmatrix -ab -C magenta" -title cmatrix
assign [title="cmatrix"] $ws5

### ws6 is for ranger ###
exec --no-startup-id i3-msg workspace $ws6
exec xterm -e "ranger" -title ranger
assign [title="ranger"] $ws6

### ws7 is for visWRONGVISBRO ###
#exec --no-startup-id i3-msg workspace $ws7
#exec xterm -e "vis" -title vis
#assign [title="vis"] $ws7

### ws8 is for cal ###
exec --no-startup-id i3-msg workspace $ws8
exec xterm -e "cal -3" -title cal
assign [title="cal"] $ws8

# (Being a command-line utility, i3-msg does not support startup notifications,
#  hence the exec --no-startup-id.)
# (Starting iceweasel with i3’s exec command is important in order to make i3
#  create a startup notification context, without which the iceweasel window(s)
#  cannot be matched onto the workspace on which the command was started.)
# exec --no-startup-id i3-msg 'workspace $ws3; exec chromium-browser; workspace $ws1'

